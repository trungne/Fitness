<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chooseUserLevelBeginner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Beginner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/chooseUserLevelIntermediate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:text="Intermediate"
            app:layout_constraintEnd_toEndOf="@+id/chooseUserLevelBeginner"
            app:layout_constraintStart_toStartOf="@+id/chooseUserLevelBeginner"
            app:layout_constraintTop_toBottomOf="@+id/chooseUserLevelBeginner" />

        <Button
            android:id="@+id/chooseUserLevelAdvanced"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="Advanced"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/chooseUserLevelIntermediate"
            app:layout_constraintTop_toBottomOf="@+id/chooseUserLevelIntermediate" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>