<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.NotifyCompletedRunFragment">


    <LinearLayout
        android:id="@+id/notify_fragment_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:background="@drawable/custom_form"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="Session Finished !"
            android:textColor="@color/green_main"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/blue_200"
                    android:text="Total Distance: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notify_fragment_total_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="TextView" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/blue_200"
                    android:layout_weight="1"
                    android:text="Travelled Distance: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notify_fragment_travelled_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="TextView" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue_200"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Initial time: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notify_fragment_initial_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue_200"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Finished time: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notify_fragment_finished_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:text="TextView" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue_200"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Duration: (minutes) "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notify_fragment_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/blue_200"
                    android:layout_marginStart="10dp"
                    android:text="Total steps: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notify_fragment_total_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Track Completed: "
                    android:textColor="@color/blue_200"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notify_fragment_track_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/notify_fragment_button_finish"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_4"
            android:text="Return" />
    </LinearLayout>

</FrameLayout>