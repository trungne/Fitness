<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.RunningFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/running_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/fragmentRunningDistance"
            android:layout_width="283dp"
            android:layout_height="48dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="100dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter the distance you want to run"
            android:inputType="numberDecimal"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/fragmentRunningRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="208dp"
            android:backgroundTint="@color/green_main"
            android:text="Let's run" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>